{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "public": true,
  "routes": [
    {
      "src": "^/sitemap\\.xml$",
      "dest": "/sitemap.xml",
      "methods": ["GET"]
    },
    {
      "src": "^/robots\\.txt$",
      "dest": "/robots.txt",
      "methods": ["GET"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
